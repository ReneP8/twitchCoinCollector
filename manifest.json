{
    "manifest_version": 3,
    "name": "Twitch Point Collector",
    "description": "A Chrome Extension to collect the channel points",
    "version": "0.1",
    "host_permissions": ["https://www.twitch.tv/*"],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.twitch.tv/*"],
        "js": ["content.js"]
    }]
}